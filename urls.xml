<?xml version="1.0" encoding="utf-8"?>
<tryton>
    <data>

        <record id="new_post" model="nereid.url_rule">
            <field name="rule">/&lt;language&gt;/post/-new</field>
            <field name="endpoint">blog.post.new_post</field>
            <field name="sequence" eval="50" />
            <field name="http_method_get" eval="True"/>
            <field name="http_method_post" eval="True"/>
            <field name="url_map" ref="nereid.default_url_map" />
        </record>

        <record id="edit_post" model="nereid.url_rule">
